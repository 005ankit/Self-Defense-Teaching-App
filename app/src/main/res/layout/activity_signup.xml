<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:background="@drawable/circle_background_with_shadow"
            android:clipToOutline="true"
            android:layout_marginBottom="16dp" />

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvSignUpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Username Field -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@drawable/rounded_input_field"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/rounded_input_field"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/rounded_input_field"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword" />

        <!-- Confirm Password Field -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:background="@drawable/rounded_input_field"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword" />

        <!-- Emergency Contact Field -->
        <EditText
            android:id="@+id/etEmergencyContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact Number"
            android:background="@drawable/rounded_input_field"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone" />

        <!-- Profile Image Upload Button -->
        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Profile Image"
            android:background="@drawable/rounded_button_secondary"
            android:layout_marginBottom="24dp"
            android:textColor="#FFFFFF" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@drawable/rounded_button_success"
            android:textColor="#FFFFFF" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tvAlreadyAccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Login Redirect -->
        <TextView
            android:id="@+id/tvAlreadyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login here."
            android:textSize="14sp"
            android:textColor="#007AFF"
            android:layout_marginTop="16dp" />


    </LinearLayout>
</ScrollView>
