<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#80000000" /> <!-- Semi-transparent shadow color -->
            <size android:width="120dp" android:height="120dp" />
            <corners android:radius="60dp" /> <!-- Make it circular -->
        </shape>
    </item>

    <!-- Circle Background -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Circle color -->
            <corners android:radius="60dp" />
        </shape>
    </item>
</layer-list>


